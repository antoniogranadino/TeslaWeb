---
import Layout from "../layouts/Layout.astro";
import MainHeader from "../components/MainHeader.astro";
import HeroSection from "../components/HeroSection.astro";
import ModelY from "../components/ModelY.astro";
import Model3 from "../components/Model3.astro";
import ModelX from '../components/ModelX.astro'
---

<Layout title="Electric Cars, Solar & Clean Energy | Tesla">
  <MainHeader />

  <main
    class="snap-y snap-mandatory relative w-full h-screen overflow-auto scroll-smooth"
  >
    <div class="snap-center">
		<HeroSection/>
	</div>
    <div class="snap-center">
      <ModelY />
    </div>
    <div class="snap-center">
      <Model3/>
    </div>
    <div class="snap-center">
      <ModelX/>
    </div>
  </main>
</Layout>

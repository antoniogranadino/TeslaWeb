---
import Section from "../section.astro";
---

<Section color="white">
  <div slot="body">
    <h2 class="text-white pt-40 text-5xl font-medium">Enjoy Tesla</h2>
    <h3 class="text-white text-sm">Schedule a test drive today</h2>
  </div>

  <div slot="footer">
    <a
      class="border-white bg-white/5 backdrop-blur-sm text-white border-2 rounded px-8 py-2 font-medium hover:bg-white hover:text-black transition-colors"
      href="#">Test drive</a
    >
  </div>

  <video
    slot="background"
    class="object-center object-cover h-full w-full"
    autoplay
    muted
    loop
    src="video.webm"
  >
  </video>
</Section>
